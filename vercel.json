{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/locked$", "dest": "/locked.html" },
    { "src": "^/products/([0-9]+)$", "dest": "/products.html?id=$1" },
    { "src": "^/theme$", "dest": "/theme.html" },
    { "src": "^/([a-zA-Z0-9_-]+)$", "dest": "/$1.html" }
  ]
}