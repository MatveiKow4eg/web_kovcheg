{
  "version": 2,
  "routes": [
    { "src": "^/(.*\\.(js|css|png|webp|jpg|ico|svg|json|webmanifest))$", "dest": "/$1" },

    { "src": "^/$", "dest": "/pages/index.html" },
    { "src": "^/locked$", "dest": "/pages/locked.html" },
    { "src": "^/products/([0-9]+)$", "dest": "/pages/products.html?id=$1" },
    { "src": "^/theme$", "status": 308, "headers": { "Location": "/pages/theme.html" } },
    { "src": "^/([a-zA-Z0-9_-]+)$", "dest": "/pages/$1.html" },

    { "src": "/(.*)", "dest": "/pages/index.html" }
  ],
  "outputDirectory": "."
}
